        </button> -->
      <button class="cart" id="cartButton">
        <a href="/cart"
          ><i class="fa-solid fa-cart-shopping"></i>
          <span id="number-of-product">0</span></a
        >
      </button>
      <% if(customer) { %>
      <div class="profile-img">
        <a id="profileButton" style="cursor: pointer" href="/profile"
          ><img src="/Book Dream/images/avatar.jpg" alt=""
        /></a>
      </div>
      <% } else { %>
      <button class="login">
        <a  id="loginButton" class="login" href="/login"  style="cursor: pointer"
          >Log in</a
        >
      </button>
      <button id="signupButton" class="signup">
        <i class="fa-solid fa-user"></i
        ><a id="signupButton" style="cursor: pointer" href="/signup">Sign up</a>
      </button>
      <% } %>
    </div>
  </nav>
  <form class="filter-option" method="get" action="/filter">
    <div class="filter-group">
